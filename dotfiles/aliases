# Colored LS output
alias ls='ls --color=auto'

# List all shortcut
alias lsa='ls --all'

# Upgrade System
alias upg='sudo pacman -Syu'

# Show biggest files/folders
alias diskspace='du -S | sort -n -r |more'

# Remove Pacman DB lock file
alias rmlock='sudo rm -rf /var/lib/pacman/db.lck'

# Use "nano" in visudo
alias visudo='EDITOR=nano visudo'
